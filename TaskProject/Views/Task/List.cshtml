@model IEnumerable<TaskProject.Models.Task>

<a asp-controller="Task" asp-action="Create" class="linkbutton">Create New</a>

<h2>Current tasks:</h2>
<table border="1">
	<tr>
		<th>@nameof(TaskProject.Models.Task.Id)</th>
		<th>@nameof(TaskProject.Models.Task.Type)</th>
		<th>@nameof(TaskProject.Models.Task.Title)</th>
		<th>@nameof(TaskProject.Models.Task.CreatedTime)</th>
		<th>@nameof(TaskProject.Models.Task.Status)</th>
	</tr>
	@foreach (TaskProject.Models.Task task in @Model)
	{
		<tr>
			<td><a asp-controller="Task" asp-action="Details" asp-route-id="@task.Id">@task.Id</a></td>
			<td>@task.Type</td>
			<td>@task.Title</td>
			<td>@task.CreatedTime</td>
			<td>@task.Status</td>
		</tr>
	}
</table>
